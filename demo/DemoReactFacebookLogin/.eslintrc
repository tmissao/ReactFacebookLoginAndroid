{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true,
          "modules": true
        }
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ]
}